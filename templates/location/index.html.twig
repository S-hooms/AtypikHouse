{% extends 'base.html.twig' %}

{% block title 'Toutes nos locations' %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            {{ form_start(form) }}
            <div class="form-row">
                <div class="col">
                    {{ form_row(form.surfaceMin) }}
                </div>
                <div class="col">
                    {{ form_row(form.prixMax) }}
                </div>
                <div class="col">
                    {{ form_row(form.options) }}
                </div>
                <div class="col">
                    <div class="form-group">
                        <button class="btn btn-primary">Recherche</button>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>        
    <div class="container mt-4">

        <h1>Voir tous nos biens</h1>

        <div class="row">

        {% for location in locations %}
            <div class="col-md-4">
            {% include 'location/_location.html.twig' %}
            </div>
        {% endfor %}
        </div>

        <div class="pagination">
            {{ knp_pagination_render(locations) }}
        </div>
    </div>
{% endblock %}